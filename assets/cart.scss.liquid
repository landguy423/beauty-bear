.template-cart {
  .main {
    background: #FCE8F0;
    table {
      border-collapse: separate;
      border-spacing: 0 1.5em;
      .cart__row {
        background: #fff;
        box-shadow: 0 2px 10px 6px rgba(0, 0, 0, 0.03);
        .cart__image-wrapper {
          img {
            max-width: 148px;
          }
        }
        .cart__meta {
          .cf {
            &:after {
              content: '';
              clear: both;
              display: block;
            }
          }
          .item__content-wrap {
            float: left;
            .list-view-item__title {
              a {
                font-family: Oswald, Helvetica, sans-serif;
                font-size: 18px;
                font-weight: bold;
                font-style: normal;
                text-transform: uppercase;
                color: #e85284;
                text-decoration: none;
              }
            }
            .cart__meta-text {
              color: #9b9b9b;
            }
          }

          .cart__remove {
            position: relative;
            top: 15px;
            color: #9b9b9b;
          }
        }
        .cart__update-wrapper {
          float: right;
          padding-right: 30px;
          text-align: center;
          .cart__qty {
            text-align: center;
            font-size: 0;
            input {
              font-size: 18px;
              font-family: Oswald, Helvetica, sans-serif;
              font-weight: bold;
              text-align: center;
              width: 40px;
              line-height: 40px;
              height: 40px;
              color: #e85284;
              border-color: #e85285;
              border-style: solid;
              border-left: 0;
              border-right: 0;
              border-radius: 0;
              border-width: 2px;
            }
            .qty-plus,
            .qty-minus {
              font-size: 18px;
              display: inline-block;
              border: 2px solid #e85284;
              width: 40px;
              height: 40px;
              text-align: center;
              line-height: 40px;
              vertical-align: top;
              color: #e85284;
            }
          }
          .cart__update {
            background-color: unset;
            border-width: 0;
            color: #e85284;
            text-decoration: underline;
            margin-top: 10px;
          }
        }
        .line-price {
          & > div {
            height: 60px;
            span {
              &.money {
                font-size: 18px;
                font-family: Oswald, Helvetica, sans-serif;
                font-weight: bold;
                color: #e85284;
              }
            }
          }
        }
      }
      @media (max-width: 767px) {
        padding: 0 15px;
        .cart__row {
          .cart__image-wrapper {
            img {
              max-width: 60px;
              box-shadow: 0 2px 10px 6px rgba(0, 0, 0, 0.03);
            }
          }
          .cart__meta {
            width: 80%;
            padding: 10px 0;
            position: relative;
            .item__content-wrap {
              .list-view-item__title {
                a {
                  font-size: 16px;
                }
              }
            }
            .cart__update-wrapper {
              float: left;
              text-align: left;
              margin-top: 5px;
              .cart__qty {
                text-align: left;
                .mobile-line-price {
                  font-size: 16px;
                  display: inline-block;
                  font-family: Oswald, Helvetica, sans-serif;
                  font-weight: bold;
                  color: #e85284;
                  padding-left: 15px;
                }
                .qty-plus,
                .qty-minus {
                  height: 30px;
                  width: 30px;
                  line-height: 30px;
                  .fa {
                    font-size: 14px;
                  }
                }
                input {
                  width: 30px;
                  height: 30px;
                  line-height: 30px;
                  font-size: 16px;
                }
              }
            }
            p.remove-link {
              display: block;
              position: absolute;
              right: 20px;
              bottom: 25px;
            }
          }
        }
      }
    }
    .cart__footer {
      background: #fff;
      margin-top: 1.5em;
      box-shadow: 0 2px 10px 6px rgba(0, 0, 0, 0.03);
      padding: 15px;
      color: #9b9b9b;
      .subtotal_title {
        font-size: 20px;
        font-family: Oswald, Helvetica, sans-serif;
        font-weight: bold;
        color: #e85284;
        text-transform: uppercase;
        margin-bottom: 15px;
      }
      .discount {
        text-align: left;
        label {
          font-size: 22px;
        }
        input {
          width: 100%;
          max-width: 180px;
          font-size: 22px;
          line-height: 22px;
        }
      }
      .checkout-button {
        position: relative;
        margin-top: 15px;
        border-radius: 0;
        input {
          width: 100%;
          line-height: 1em;
          padding: 18px 20px;
          height: 65px;
          border: none;
          border-radius: 0;
        }
        &:after {
          content: "";
          height: 15px;
          width: 15px;
          display: block;
          position: absolute;
          border: 2px solid #fff;
          border-left: 0;
          border-top: 0;
          top: 48%;
          right: 40px;
          -webkit-transform: rotate(-45deg) translateY(-50%);
          -ms-transform: rotate(-45deg) translateY(-50%);
          transform: rotate(-45deg) translateY(-50%);
        }
        @media (max-width: 767px) {
          &:after {
            right: 15%;
            margin-top: -1px;
          }
        }
      }
      .additional-checkout-buttons {
        .or_checkout {
          margin: 15px 0;
          font-size: 22px;
        }
      }
      .cart__subtotal-title {
        font-size: 22px;
        float: left;
      }
      .cart__subtotal {
        font-size: 22px;
        float: right;
      }
    }
    .cart__continue--large {
      color: #e85284;
      top: 15px;
      position: relative;
      font-size: 16px;
    }
    @media (max-width: 767px) {
      padding: 50px 0 0;
      .cart__continue--large {
        top: auto;
        position: absolute;
        margin-top: -30px;
        left: 30px;
        &:before {
          content: "";
          height: 10px;
          width: 10px;
          display: block;
          position: absolute;
          border: 1px solid #e85284;
          border-left: 0;
          border-top: 0;
          top: 0;
          left: -15px;
          color: #e85284;
          -webkit-transform: rotate(135deg) translateY(-50%);
          -ms-transform: rotate(135deg) translateY(-50%);
          transform: rotate(135deg) translateY(-50%);
        }
      }
    }
  }
}
