.template-product, .template-alt, .template-sonic, .template-bobble {
  .section-product {
    padding: 54px 0 80px;
    background: -webkit-gradient(linear, left top, left bottom, from(#f8d2df), color-stop(50%, #eb839a), to(#e95182));
    background: -o-linear-gradient(top, #f8d2df 0%, #eb839a 50%, #f8d2df 100%);
    background: linear-gradient(to bottom, #f8d2df 0%, #eb839a 50%, #e95182 100%);
    .section__inner {
      display: -webkit-box;
      display: -ms-flexbox;
      display: flex;
      max-width: 1180px;
      margin: 0 auto;
      @media (max-width: 1023px) {
        display: block;
      }
      .product__logo {
        h1 {
          font-family: Oswald, Helvetica, sans-serif;
          font-style: normal;
          font-weight: 700;
          line-height: 48px;
          font-size: 48px;
          text-transform: uppercase;
          color: #e85284;
          letter-spacing: -1px;
          margin-bottom: 0;
          @media (max-width: 767px) {
            line-height: 1em;
          }
        }
        .jdgm-preview-badge {
          .jdgm-star {
            color: #e85284 !important;
          }
        }
        &.product__logo--mobile {
          display: none;
        }
        @media (max-width: 1350px) {
          font-size: 30px;
        }
        @media (max-width: 767px) {
          font-size: 20px;
          color: #fff;
          text-align: center;
          &.product__logo--mobile {
            display: block;
            color: #e85284;
            margin-bottom: 25px;
          }
        }
      }
      .variant-images {
        max-width: 119px;
        padding: 0 15px;
        
        li {
/*           padding: 4px 5px; */
          background-color: white;
          margin-bottom: 6px;
        }
        .active {
          border: 2px solid #61d3f0;
        }
      }
      .product__images {
        -webkit-box-flex: 0;
        -ms-flex: 0 0 48%;
        flex: 0 0 48%;
        max-width: 48%;
        @media (max-width: 1023px) {
          max-width: 100%;
          margin-bottom: 10px;
        }
      }
      .product__content {
        padding: 0px 50px 0 100px;
        color: #fff;
        -webkit-box-flex: 1;
        -ms-flex: 1 1;
        flex: 1 1;
        max-width: 52%;
        .product__logo {
          margin-bottom: 25px;
          .jdgm-widget {
            .jdgm-prev-badge__text {
              color: #e85284;
              font-size: 18px;
            }
          }
          @media (max-width: 1350px) {
            font-size: 30px;
          }
          @media (max-width: 767px) {
            display: none;
          }
        }
        .product-features-alt {
          li {
            font-size: 18px;
            position: relative;
            padding-left: 20px;
            line-height: 1.2em;
            
            &:after {
              content: '';
              position: absolute;
              display: block;
              width: 6px;
              height: 12px;
              left: 5px;
              top: 0;
              border: solid #fff;
              border-width: 0 2px 2px 0;
              transform: rotate(45deg);
            }
          }
        }
        .product__plan {
          margin: 10px 0 30px 0;
          .accordions {
            .accordion {
              &.active {
                .accordion__head {
                  h3 > span:nth-child(2) {
                    color: #FFF;
                    &:after {
                      background-color: #FFF;
                    }
                    @media (max-width: 767px) {
                      color: #f3b5c2;
                      &:after {
                        background-color: #f3b5c2;
                      }
                    }
                  }
                }
              }
            }
          }
        }
        span.already-exist {
          font-size: 18px;
          line-height: 2em;
          display: block;
          margin-bottom: 10px;
          color: #61d3f0;
        }
        .product__actions {
          position: relative;
          margin-bottom: 50px;
          
          &:hover {
            &:after {
/*               opacity: 0.6; */
              border-color: #61d3f0;
            }
          }
          .btn {
            width: 100%;
            border: 0;
            border-radius: 0;
            box-shadow: 7px 6px 7px 0 rgba(28, 3, 68, 0.1);
          }
          &:after {
            content: "";
            height: 15px;
            width: 15px;
            display: block;
            position: absolute;
            border: 4px solid #fff;
            border-left: 0;
            border-top: 0;
            top: 49%;
            left: calc(50% + 60px);
            margin-top: -1px;
            -webkit-transform: rotate(-45deg) translateY(-50%);
            -ms-transform: rotate(-45deg) translateY(-50%);
            transform: rotate(-45deg) translateY(-50%);
            -webkit-transition: border-color 0.4s;
            -ms-transition: border-color 0.4s;
            -o-transition: border-color 0.4s;
            -moz-transition: border-color 0.4s;
            transition: border-color 0.4s;
          }
          @media (max-width: 767px) {
            margin-bottom: 30px;
          }
        }
        .product-short-exceprt {
          p {
            font-size: 18px;
            text-align: center;
            color: #fff;
            line-height: 1em;
          }
        }
        .product__description {
          margin-bottom: 30px;
          p {
            font-style: normal;
            font-weight: normal;
            line-height: 1;
            font-size: 18px;
            margin-bottom: 5px;
            color: #fff;
          }
          .read_more {
            text-decoration: none;
            font-style: normal;
            font-weight: 600;
            line-height: 24px;
            font-size: 18px;
            border-bottom: 1px solid #fff;
            letter-spacing: 1px;
          }
        }
        .ro_widget {
          .bold-ro__bold-active {
            background-color: transparent !important;
          }
        }
        .ro-subscribe-btn {
          display: none;
        }
        @media (max-width: 1350px) {
          padding: 0 10px;
        }
        @media (max-width: 1023px) {
          max-width: 100%;
        }
      }
    }
    @media (max-width: 767px) {
      padding: 20px 0 10px;
    }
  }
  .section-icons {
    background-color: transparent;
    padding: 35px 0 0;
    .shell {
      padding: 0;
      .list-icons {
        margin: 0;
        li {
          -webkit-box-flex: 0;
          -ms-flex: 0 0 16%;
          flex: 0 0 16.5%;
          max-width: 16.67%;
          padding: 0;
          margin-top: 30px;
          &:first-child {
            padding-left: 0;
          }
          &:last-child {
            padding-right: 0;
          }
          img {
            max-width: 65px;
            width: 65px;
            height: 67px;
          }
          span {
            color: #fff;
            font-size: 18px;
            line-height: 22px;
            font-weight: 700;
          }
        }
      }
    }
    @media (max-width: 767px) {
      padding: 15px 0 0;
      .shell {
        .list-icons {
          li {
            -ms-flex: 0 0 33.33%;
            flex: 0 0 33.33%;
            max-width: 33.33%;
            
            &:first-child {
              padding-left: 10px;
            }
            &:last-child {
              padding-right: 10px;
            }
          }
        }
      }
    }
  }
}

.template-alt, .template-bobble {
  .section-product {
    .section__inner {
      .product__images {
        flex: 0 0 45%;
        max-width: 45%;
        @media (max-width: 1023px) {
          max-width: 100%;
          margin-bottom: 10px;
        }
        @media (max-width: 767px) {
          margin-bottom: 50px;
        }
        .slick-dots {
          li {
            button {
              &:before {
                content: none;
              }
            }
          }
        }
      }
      .product__content {
        padding: 0 0 0 100px;
        max-width: 45%;
        @media (max-width: 767px) {
          max-width: 100%;
          padding: 0;
        }
      }
    }
  }
}
.template-sonic {
  .main {
    padding: 0;
    #shopify-section-section-featured-product-sonic {
      background-color: rgba(252, 232, 240, 0.39);
    }
    .section-featured-product {
      .shell {
        .section__inner {
          .section__content {
            padding: 100px 0;
            max-width: 44%;
            @media (max-width: 767px) {
              max-width: 100%;
              padding: 40px 10px 0;
            }
            h2 {
              color: #e85284;
            }
          }
          .section__image {
            width: 60%;
            @media (max-width: 767px) {
              margin: 20px auto 50px;
            }
          }
        }
      }
    }

    .section-product {
      .section__inner {
        .product__images {
          .variant-dots {
            width: 125px;
            margin: 15px auto;
            ul {
              li {
                width: 14px;
                height: 14px;
                border: 1px solid white;
                border-radius: 50%;
                margin-right: 5px;
                display: inline-block;
                &:last-child {
                  margin-right: 0;
                }
                &.active {
                  background-color: white;
                }
                a {
                  display: inline-block;
                  width: 14px;
                  height: 14px;
                }
              }
            }
          }
          .slick-dots {
            li {
              button {
                &:before {
                  content: none;
                }
              }
            }
          }
        }
        .product-image-slider {
          margin-bottom: 50px;
          .slick-list {
            .slick-track {
              .slick-slide {
                img {
                  width: 100%;
                }
              }
            }
          }
        }
        .product__content {
          padding: 0 0 0 45px;
          .product__logo {
            margin-bottom: 35px;
            h1 {
              max-width: 400px;
            }
          }
          
          .product-short-exceprt {
            font-size: 18px;
            margin-top: 35px;
          }
          .product__actions {
            margin-top: 35px;
            .product-sonic-price {
              width: 87px;
              height: 39px;
              font-family: Oswald;
              font-size: 26px;
              font-weight: bold;
              font-style: normal;
              font-stretch: normal;
              line-height: normal;
              letter-spacing: normal;
              color: #ffffff;
              
              span {
                display: inline-block;
                margin-top: 5px;
              }
            }
            .btn {
              width: 70%;
              float: right;
            }
            &:after {
              top: 55%;
              left: calc(50% + 115px);
            }
          }
          @media (max-width: 1023px) {
            max-width: 52%;
          }
          @media (max-width: 767px) {
            padding: 0 15px;
            margin: 0 auto;
            max-width: 100%;
            .product__actions {
              .product-sonic-price {
                width: 100%;
                display: block;
                text-align: center;
              }
              .btn {
                float: none;
                width: 100%;
                margin: 20px auto;
              }
              &:after {
                top: 65%;
                left: calc(50% + 50px);
              }
            }
          }
        }
      }
    }
    .section-icons {
      .shell {
        .list-icons {
          li {
            flex: 0 0 25%;
            max-width: 25%;
            @media (max-width: 767px) {
              flex: 0 0 50%;
              max-width: 50%;
            }
          }
        }
      }
    }
    
    .section-image {
      .shell {
        margin-top: 70px;
        margin-bottom: 30px;
        .section__inner {
          width: 60%;
          display: block;
          margin: 0 auto;
          
          @media (max-width: 768px) {
            width: 100%;
          }
        }
      }
    }
    
    .section-howitworks {
      background-color: #fdf5f9;
      padding: 5% 5%;
      .shell {
        .section__inner {
          position: relative;
          width: 75%;
          display: block;
          margin: 0 auto;
          
          .video-btn {
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            width: 330px;
            height: 58px;
            box-shadow: 7px 6px 7px 0 rgba(28, 3, 68, 0.1);
            background-color: #e85284;
            
            a {
              text-decoration: none;
              span {
                font-family: Oswald;
                font-size: 26px;
                font-weight: bold;
                font-style: normal;
                font-stretch: normal;
                line-height: 1.42;
                letter-spacing: normal;
                text-align: center;
                text-decoration: none;
                color: #ffffff;
                margin-top: 10px;
                display: inline-block;
              }
              
              img {
                display: inline-block;
                width: 50px;
                height: 50px;
                margin: -15px 10px 0 30px;
              }
            }
            @media (max-width: 767px) {
              width: 280px;
              height: 58px;
              top: calc(100% + 45px);
              box-shadow: none;
              a {
                img {
                  width: 45px;
                  height: 45px;
                  margin: -14px 5px 0 15px;
                }
              }
            }
          }
          @media (max-width: 767px) {
            width: 100%;
          }
        }
      }
    }
    .section-easystep {
      background-color: #fce8f0;
      .shell {
        .section__inner {
          padding: 100px 0;
          h2 {
            font-family: Oswald;
            font-size: 42px;
            font-weight: bold;
            font-style: normal;
            font-stretch: normal;
            line-height: 0.81;
            letter-spacing: normal;
            text-align: center;
            color: #e85284;
            margin-bottom: 65px;
          }
          .steps {
            display: flex;
            flex-flow: row wrap;
            align-items: flex-start;
            .step {
              width: 25%;
              .circle {
                width: 206px;
                height: 206px;
                background-color: #ffffff;
                border-radius: 50%;
                position: relative;
                margin: 0 auto;
                span {
                  font-family: Oswald;
                  font-size: 36px;
                  font-weight: bold;
                  font-style: normal;
                  font-stretch: normal;
                  line-height: 0.94;
                  letter-spacing: normal;
                  text-align: center;
                  color: #e85284;
                  position: absolute;
                  top: 50%;
                  left: 50%;
                  transform: translate(-50%, -50%);
                }                
              }
              .des {
                margin: 28px auto;
                max-width: 210px;
                text-align: center;
                span {
                  font-family: Oswald;
                  font-size: 22px;
                  font-weight: bold;
                  font-style: normal;
                  font-stretch: normal;
                  line-height: 1;
                  letter-spacing: normal;
                  text-align: center;
                  color: #e85284;
                  display: block;
                }
                p {
                  font-family: Metric;
                  font-size: 22px;
                  font-weight: normal;
                  font-style: normal;
                  font-stretch: normal;
                  line-height: 1.09;
                  letter-spacing: normal;
                  text-align: center;
                  color: #e85284;
                  width: 90%;
                  margin: 8px auto;
                }
              }
              
              @media (max-width: 767px) {
                width: 100%;
                margin-bottom: 50px;
                display: flex;
            	flex-flow: row wrap;
                &:last-child {
                  margin-bottom: 0;
                }
                .circle {
                  width: 110px;
                  height: 110px;
                  span {
                    font-size: 19px;
                  }
                }
                .des {
                  margin: 10px auto;
                  span {
                    text-align: left;
                  }
                  p {
                    width: 100%;
                    text-align: left;
                  }
                }
              }
            }
          }
        }
      }
      @media (max-width: 768px) {
        margin-top: 80px;
        .shell {
          .section__inner {
            padding: 50px 0;
            h2 {
              font-size: 32px;
            }
          }
        }
      }
    }
    
    .customer-reviews {
      .preview-review {
        text-align: center;
      }
      .jdgm-carousel-title-and-link {
        margin-bottom: 100px;
      }
      .jdgm-carousel-title {
        font-family: Oswald;
        font-size: 42px;
        font-weight: bold;
        font-style: normal;
        font-stretch: normal;
        line-height: 0.81;
        letter-spacing: normal;
        text-align: center;
        color: #e85284;
      }
      .carousel-footer {
        margin-top: 70px;
        a {
          font-family: Oswald;
          font-size: 18px;
          font-weight: bold;
          font-style: normal;
          font-stretch: normal;
          line-height: 1.56;
          letter-spacing: normal;
          text-align: center;
          color: #e85284;
        }
      }
    }
    .section-asseen {
      .shell {
        .section__inner {
          h2 {
            font-family: Oswald;
            font-size: 42px;
            font-weight: bold;
            font-style: normal;
            font-stretch: normal;
            line-height: 0.81;
            letter-spacing: normal;
            text-align: center;
            color: #e85284;
            margin: 99px 0 90px 0;
          }
          .brand-list1, .brand-list2 {
            height: 50px;
            display: flex;
            flex-flow: row wrap;
            align-items: flex-start;
            span.brand {
              width: 22%;
              display: inline-block;
              margin-right: 3%;
              position: relative;
              img {
                width: 80%;
                display: block;
                margin: 0 auto;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                min-height: 35px;
                max-height: 50px;
              }
            }
          }
          .brand-list1 {
            padding: 0 15%;
          }
          .brand-list2 {
            padding: 0 5%;
            margin-top: 50px;
            margin-bottom: 100px;
          }
          .brand-list {
            padding: 0 50px;
            text-align: center;
            img {
              display: inline-block;
              vertical-align: middle;
              height: 80px;
              margin-right: 50px;
              padding: 20px 0;
              &:first-child {
                margin-left: 30px;
              }
              
            }
            @media (max-width: 768px) {
              padding: 0 10px;
              img {
              	height: 55px;
                margin-right: 30px;
                padding: 20px 0;
                &:first-child {
                  margin-left: 0;
                }
                &:nth-child(2) {
                  height: 60px;
                }
                &:nth-child(3) {
                  margin-right: 0;
                }
                &:nth-child(5) {
                  height: 60px;
                }
                &:nth-child(6) {
                  margin-right: 0;
                }
                &:last-child {
                  margin-right: 0;
                }
              }
            }
          }
        }
      }
    }
  }
}

.template-bobble {
  .main {
    padding: 0;
  }
  .product__content {
    .bobble__plan {
      .accordions.accordions--product-plans {
        .plan-radios {
          border: 1px solid #FFF;
          a {
            text-decoration: none;
            .radio.selected {
              h5 {
/*                 color: #FFF; */
              }
              .bobble-price {
                color: #e85284;
              }
              &:after {
                opacity: .2;
                background: #FFF;
              }
            }
            .radio {
              .bobble-price {
                position: absolute;
                display: block;
                right: 20px;
                top: 15px;
                font-size: 20px;
              }
            }
          }
        }
      }
    }
  }
  .customer-reviews {
    background-color: #FFF;
  }
  .discover-collection {
    background-color: #fce8f0;
    .product-list {
      ul {
        li {
          &:first-child {
            margin-left: 11%;
          }
          max-width: calc((100% - 312px) / 2);
          .product-des {
            min-height: 120px;
          }
        }
      }
    }
    @media (max-width: 1400px) {
      .product-list {
        ul {
          li {
            max-width: calc((100% - 160px) / 2);
            margin: 0 40px;
          }
        }
      }
    }

    @media (max-width: 1120px) {
      .product-list {
        ul {
          li {
            max-width: calc((100% - 80px) / 2);
            margin: 0 40px;
          }
        }
      }
    }
    @media (max-width: 965px) {
      .product-list {
        ul {
          display: block;
          width: 100%;
          max-width: 400px;
          margin: 0 auto;
          li {
            width: 100%;
            max-width: 100%;
            margin: 0;
            margin-bottom: 50px;

            &:first-child {
              margin-left: 0;
            }
            &:last-child {
              margin-bottom: 0;
            }

            a {
              &:after {
                top: 47%;
              }
            }
          }
        }
      }
    }

    @media (max-width: 767px) {
      .product-list {
        ul {
          li {
            a {
              &:after {
                top: 45%;
                left: calc(50% + 70px);
              }
            }
          }
        }
      }
    }
  }
  .section-instagram {
    background-color: #fdf5f9;
  }
}