/* ------------------------------------------------------------ *\
Section Featured Product
\* ------------------------------------------------------------ */
.section-featured-product {
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
  .shell {
    .section__inner {
      position: relative;
      .section__content {
        padding: 180px 0 100px 200px;
        position: relative;
        z-index: 1;
        max-width: 60%;
        h2 {
          font-family: Oswald, Helvetica, sans-serif;
          font-style: normal;
          font-weight: bold;
          line-height: 1;
          font-size: 78px;
          text-transform: uppercase;
          color: #fff;
          margin-bottom: 20px;
          letter-spacing: 0;
          strong {
            color: #e85284;
          }
          em {
            color: #fadae6;
            font-style: normal;
          }
        }
        p {
          line-height: 1.09;
          font-size: 22px;
          color: #e85284;
          max-width: 530px;
          margin-bottom: 30px;
        }
        .btn {
          border: 0;
          position: relative;
          min-width: 320px;
          box-shadow: 7px 6px 7px 0 rgba(28, 3, 68, 0.1);
          padding: 17px 40px;
          line-height: 1;
          &:after {
            content: "";
            height: 15px;
            width: 15px;
            display: block;
            position: absolute;
            border: 2px solid #fff;
            border-left: 0;
            border-top: 0;
            top: 50%;
            left: calc(50% + 80px);
            -webkit-transform: rotate(-45deg) translateY(-50%);
            -ms-transform: rotate(-45deg) translateY(-50%);
            transform: rotate(-45deg) translateY(-50%);
          }
          &:hover {
            &:after {
              border-color: #61d3f0;
            }
          }
        }
        @media (max-width: 1023px) {
          max-width: 100%;
          text-align: center;
          padding: 100px 20px 30px;
          p {
            margin: 0 auto;
          }
        }
      }
      .section__image {
        img {
          &.desktop {
            position: absolute;
            top: 50%;
            transform: translateY(-40%);
            right: 0;
            max-height: 680px;
          }
          &.mobile {
            display: none;
          }
        }
        @media (max-width: 1023px) {
          position: static;
          img {
            &.desktop {
              display: none;
            }
            &.mobile {
              display: block;
            }
          }
        }
      }
    }
    @media (max-width: 767px) {
      padding: 0;
      .section__inner {
        .section__content {
          padding: 40px 10px 0;
          max-width: 100%;
          br {
            display: none;
          }
          h2 {
            color: #e85284;
            line-height: 1.19;
            text-align: center;
            max-width: 283px;
            margin: 0 auto;
            font-size: 32px;
            font-style: normal;
  			font-stretch: normal;
            letter-spacing: normal;
  			text-align: center;
          }
          p {
            text-align: center;
            padding: 30px 15px;
            margin-bottom: 20px;
          }
        }
        .section__actions {
          padding: 0 15px 50px 15px;
          .btn {
            width: 100%;
            border: 0;
            position: relative;
            letter-spacing: 0;
            padding: 10px 40px;
            box-shadow: 7px 6px 7px 0 rgba(28, 3, 68, 0.1);
            &:after {
              content: "";
              height: 15px;
              width: 15px;
              display: block;
              position: absolute;
              border: 2px solid #fff;
              border-left: 0;
              border-top: 0;
              top: 50%;
              left: calc(50% + 80px);
              -webkit-transform: rotate(-45deg) translateY(-50%);
              -ms-transform: rotate(-45deg) translateY(-50%);
              transform: rotate(-45deg) translateY(-50%);
            }
          }
        }
      }
    }
  }
}

