{% form 'reset_customer_password', class: 'form form-default form-reset-password' %}
	{% capture error_password %}{% if form.errors contains "password" %}error{% endif %}{% endcapture %}
	{% capture error_password_confirm %}{% if form.errors contains "password_confirmation" %}error{% endif %}{% endcapture %}
	
	<div class="form-head">
		<h1>{{ 'customer.reset_password.title' | t }}</h1>

		<p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>
	</div><!-- /.form-head -->
	
	{% if form.errors %}
		<div class="form-notice error">
			{{ form.errors | default_errors }}
		</div><!-- /.form-notice -->
	{% endif %}

	<div class="form-body">
		<div class="form-row">
			<label for="field-password" class="form-label" >{{ 'customer.reset_password.password' | t }}</label>
			
			<input type="password" value="" name="customer[password]" id="field-password" class="field {{ error_password }}" placeholder="{{ 'customer.reset_password.password' | t }}" />
		</div><!-- /.form-row -->

		<div class="form-row">
			<label for="field-password-confirm" class="form-label" >{{ 'customer.reset_password.password_confirm' | t }}</label>

			<input type="password" value="" name="customer[password_confirmation]" id="field-password-confirm" class="field {{ error_password_confirm }}" placeholder="{{ 'customer.reset_password.password_confirm' | t }}" />
		</div><!-- /.form-row -->
	</div><!-- /.form-body -->
	
	<div class="form-actions clear">
		<input type="submit" class="form-btn" value="{{ 'customer.reset_password.submit' | t }}">
	</div><!-- /.form-actions -->
{% endform %}