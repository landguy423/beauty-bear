<script>
  $(document).ready(function(){
    $("#video1, #video2, #video3").videoPopup();
    $(".product-image-slider").slick({
      dots: true,
      infinite: true,
      speed: 500,
      fade: true,
      cssEase: 'linear',
      prevArrow: null,
      nextArrow: null
    });
  });
  jQuery('.variant__image').on('click', function() {
    var selected = $(this).data('selectedid');
    if (selected == 'video') {
      jQuery('body').css('overflow', 'hidden');
    }
  });
  $('.product-image-slider').on('beforeChange', function(event, slick, currentSlide, nextSlide){
    var selectedSlick = $('#slick-slide0'+nextSlide).data('selectedid');
    if (selectedSlick == 'video') {
      jQuery('body').css('overflow', 'hidden');
    }
  });
</script>
